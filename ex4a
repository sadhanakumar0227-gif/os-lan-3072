#include <stdio.h>

int main() {
    int n, i;
    int burst[20], wait[20], turn[20];
    float total_w = 0, total_t = 0;

    printf("Enter the number of processes: ");
    scanf("%d", &n);

    printf("Enter burst time for each process:\n");
    for(i = 0; i < n; i++) {
        printf("P%d: ", i+1);
        scanf("%d", &burst[i]);
    }

    wait[0] = 0;

    for(i = 1; i < n; i++) {
        wait[i] = wait[i-1] + burst[i-1];
    }

    for(i = 0; i < n; i++) {
        turn[i] = wait[i] + burst[i];
        total_w += wait[i];
        total_t += turn[i];
    }

    printf("\nGantt Chart:\n|");
    for(i = 0; i < n; i++)
        printf(" P%d |", i+1);

    printf("\n\nProcess\tBurst\tWaiting\tTurnaround\n");
    for(i = 0; i < n; i++)
        printf("P%d\t%d\t%d\t%d\n", i+1, burst[i], wait[i], turn[i]);

    printf("\nAverage Waiting Time: %.2f", total_w/n);
    printf("\nAverage Turnaround Time: %.2f\n", total_t/n);

    return 0;
}
