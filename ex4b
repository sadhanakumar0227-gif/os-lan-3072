#include <stdio.h>

int main() {
    int n, i, j;
    int burst[20], wait[20], turn[20], temp;
    float total_w = 0, total_t = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("Enter burst times:\n");
    for(i = 0; i < n; i++) {
        printf("P%d: ", i+1);
        scanf("%d", &burst[i]);
    }

    // Sorting burst times (Ascending)
    for(i = 0; i < n-1; i++) {
        for(j = i+1; j < n; j++) {
            if(burst[i] > burst[j]) {
                temp = burst[i];
                burst[i] = burst[j];
                burst[j] = temp;
            }
        }
    }

    wait[0] = 0;

    for(i = 1; i < n; i++) {
        wait[i] = wait[i-1] + burst[i-1];
    }

    for(i = 0; i < n; i++) {
        turn[i] = wait[i] + burst[i];
        total_w += wait[i];
        total_t += turn[i];
    }

    printf("\nGantt Chart:\n|");
    for(i = 0; i < n; i++)
        printf(" %d |", burst[i]);

    printf("\n\nBurst\tWaiting\tTurnaround\n");
    for(i = 0; i < n; i++)
        printf("%d\t%d\t%d\n", burst[i], wait[i], turn[i]);

    printf("\nAverage Waiting Time: %.2f", total_w/n);
    printf("\nAverage Turnaround Time: %.2f\n", total_t/n);

    return 0;
}
